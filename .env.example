# Jarvis Configuration
# Copy this file to .env and update the values as needed

# General Settings
JARVIS_NAME=Jarvis
DEFAULT_VOLUME=0.7
LANGUAGE=en-US

# Voice Settings
VOICE_RATE=150
VOICE_VOLUME=1.0

# ====== API Keys & Providers ======
OPENAI_API_KEY=
OPENAI_API_KEY_2=
DEEPSEEK_API_KEY=
DEEPSEEK_API_KEY_2=
ANTHROPIC_API_KEY=
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=true  # true = testnet, false = mainnet
GITHUB_TOKEN=
GRAFANA_API_KEY=
GRAFANA_ALLOY_TOKEN=
NEWS_API_KEY=
GOOGLE_API_KEY=
HF_API_KEY=
JARVISON_API_KEY=
JARVISON_API_URL=http://localhost:7000/api
NGROK_AUTH_TOKEN=

# Logging
LOG_LEVEL=INFO
LOG_FILE=jarvis.log

# ====== GENERAL ======
ENVIRONMENT=development

# ====== REDIS CONFIG ======
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_CHANNEL_PREFIX=robenos:

# ====== AI PROVIDERS ======
AI_PROVIDER=jarvison

# ====== TRADING SETTINGS ======
TRADING_ENGINE=bybit
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_QUANTITY=0.01
MAX_CONCURRENT_TRADES=5
DEFAULT_RISK_PERCENTAGE=1.0

# ====== RISK MANAGEMENT SETTINGS ======
MAX_DAILY_LOSS_PERCENT=10.0
MAX_POSITION_SIZE_PERCENT=2.0
STOP_LOSS_PERCENT=3.0
TAKE_PROFIT_PERCENT=6.0
ENABLE_STOP_LOSS=true
ENABLE_TAKE_PROFIT=true

# ====== TECHNICAL INDICATORS SETTINGS ======
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
EMA_FAST_PERIOD=12
EMA_SLOW_PERIOD=26
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# ====== DATABASE CONFIGURATION ======
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mashaaer_trading
DB_USER=postgres
DB_PASSWORD=
DATABASE_URL=sqlite:///roben_trading.db
ENABLE_DATABASE_LOGGING=true

# ====== DASHBOARD ======
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000

# ====== PROMETHEUS METRICS (Optional) ======
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ====== SYSTEM PATHS ======
CONFIG_DIR=./config
LOG_DIR=./logs
DATA_DIR=./data

# ====== TELEGRAM BOT (Optional) ======
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ====== SELF-HEALING SETTINGS ======
SELF_HEALING_ENABLED=true
MAX_RETRIES=3
RETRY_BACKOFF=5

# ====== APPLICATION SETTINGS ======
BACKTEST_MODE=false
PAPER_TRADING=false
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_SECRET_KEY=

# ====== WEBHOOK SETTINGS ======
WEBHOOK_SECRET=

# ====== OPTIONAL/INTEGRATION ======
# Add any other integration keys below as needed
